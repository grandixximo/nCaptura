<Window x:Class="Captura.CameraPropertiesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Camera Properties" 
        Height="600" 
        Width="800"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource WindowBackground}">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <Label Grid.Row="0" 
               Margin="0,0,0,10">
            <TextBlock Text="Camera Properties Diagnostic"
                       Style="{StaticResource Title}"/>
        </Label>
        
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto">
            <TextBox Name="PropertiesTextBox"
                     IsReadOnly="True"
                     FontFamily="Consolas"
                     FontSize="12"
                     TextWrapping="Wrap"
                     VerticalAlignment="Stretch"
                     Background="{DynamicResource TextBackground}"
                     Foreground="{DynamicResource ItemText}"
                     Padding="5"/>
        </ScrollViewer>
        
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,10,0,0">
            <Button Click="CopyToClipboard_Click"
                    Margin="0,0,5,0">
                <DockPanel>
                    <Path Data="{Binding Icons.Clipboard, Source={StaticResource ServiceLocator}}"
                          Width="15"
                          Height="15"
                          Margin="0,0,10,0"
                          Stretch="Uniform"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"/>

                    <TextBlock Text="Copy to Clipboard"/>
                </DockPanel>
            </Button>
            <Button Content="Close" 
                    IsDefault="True"
                    Click="Close_Click" 
                    Margin="5,0"/>
        </StackPanel>
    </Grid>
</Window>

<Window x:Class="Captura.CameraPropertiesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Camera Properties" 
        Height="600" 
        Width="800"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource WindowBackground}">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" 
                   FontSize="16" 
                   FontWeight="Bold" 
                   Margin="0,0,0,10">
            Camera Properties Diagnostic
        </TextBlock>
        
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto">
            <TextBox Name="PropertiesTextBox"
                     IsReadOnly="True"
                     FontFamily="Consolas"
                     FontSize="12"
                     TextWrapping="Wrap"
                     VerticalAlignment="Stretch"
                     Background="{DynamicResource TextBackground}"
                     Foreground="{DynamicResource ItemText}"
                     Padding="5"/>
        </ScrollViewer>
        
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,10,0,0">
            <Button Content="Copy to Clipboard" 
                    Click="CopyToClipboard_Click"
                    Padding="10,5" 
                    Margin="0,0,10,0"/>
            <Button Content="Close" 
                    IsDefault="True"
                    Click="Close_Click" 
                    Padding="10,5"/>
        </StackPanel>
    </Grid>
</Window>

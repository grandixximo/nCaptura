<Page x:Class="Captura.AudioPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Audio">
    <Grid>
        <StackPanel DataContext="{Binding MainViewModel, Source={StaticResource ServiceLocator}}"
                    Margin="5,0,0,0">
            <ScrollViewer MaxHeight="200">
                <StackPanel IsEnabled="{Binding RecordingViewModel.RecorderState, Source={StaticResource ServiceLocator}, Converter={StaticResource NotRecordingConverter}}"
                            Name="AudioSourcesPanel">
                    
                    <!-- Microphone Selection -->
                    <CheckBox Margin="0,5"
                              IsChecked="{Binding Settings.Audio.RecordMicrophone, Mode=TwoWay}">
                        <DockPanel>
                            <Path Data="{Binding Icons.Mic, Source={StaticResource ServiceLocator}}"
                                  Width="15"
                                  Height="15"
                                  Margin="0,0,5,0"
                                  Stretch="Uniform"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  ToolTip="{Binding MicSource, Source={StaticResource Loc}, Mode=OneWay}"/>
                            <TextBlock Text="{Binding MicSource, Source={StaticResource Loc}, Mode=OneWay}"/>
                        </DockPanel>
                    </CheckBox>
                    
                    <ComboBox ItemsSource="{Binding AudioSource.AvailableMicrophones, Source={StaticResource ServiceLocator}}"
                              SelectedItem="{Binding AudioSource.SelectedMicrophone, Mode=TwoWay, Source={StaticResource ServiceLocator}}"
                              DisplayMemberPath="Name"
                              IsEnabled="{Binding Settings.Audio.RecordMicrophone}"
                              Margin="20,0,0,5"/>

                    <!-- Speaker/Loopback Selection -->
                    <CheckBox Margin="0,5"
                              IsChecked="{Binding Settings.Audio.RecordSpeaker, Mode=TwoWay}">
                        <DockPanel>
                            <Path Data="{Binding Icons.Speaker, Source={StaticResource ServiceLocator}}"
                                  Width="15"
                                  Height="15"
                                  Margin="0,0,5,0"
                                  Stretch="Uniform"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  ToolTip="{Binding LoopbackSource, Source={StaticResource Loc}, Mode=OneWay}"/>
                            <TextBlock Text="{Binding LoopbackSource, Source={StaticResource Loc}, Mode=OneWay}"/>
                        </DockPanel>
                    </CheckBox>
                    
                    <ComboBox ItemsSource="{Binding AudioSource.AvailableSpeakers, Source={StaticResource ServiceLocator}}"
                              SelectedItem="{Binding AudioSource.SelectedSpeaker, Mode=TwoWay, Source={StaticResource ServiceLocator}}"
                              DisplayMemberPath="Name"
                              IsEnabled="{Binding Settings.Audio.RecordSpeaker}"
                              Margin="20,0,0,5"/>
                </StackPanel>
            </ScrollViewer>

            <DockPanel Margin="0,5"
                       IsEnabled="{Binding RecordingViewModel.RecorderState, Source={StaticResource ServiceLocator}, Converter={StaticResource NotRecordingConverter}}">
                <Label Content="{Binding Quality, Source={StaticResource Loc}, Mode=OneWay}"
                       ContentStringFormat="{}{0}:"/>
                <Label Content="{Binding Settings.Audio.Quality}"
                       ContentStringFormat="{}{0:N0}%"
                       Margin="5,0"
                       MinWidth="30"
                       HorizontalContentAlignment="Right"/>
                <Slider Minimum="1" 
                        Maximum="100"
                        SelectionStart="40"
                        SelectionEnd="60"
                        IsSelectionRangeEnabled="True"
                        Value="{Binding Settings.Audio.Quality}"/>
            </DockPanel>

            <StackPanel IsEnabled="{Binding RecordingViewModel.RecorderState, Source={StaticResource ServiceLocator}, Converter={StaticResource NotRecordingConverter}}"
                        Margin="0,20,0,0">
                <!-- PlaybackRecordingRealTime checkbox removed - deprecated feature -->

                <CheckBox IsChecked="{Binding Settings.Audio.SeparateFilePerSource}"
                          Content="{Binding SeparateAudioFiles, Source={StaticResource Loc}, Mode=OneWay}"
                          Margin="0,5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
